package renderer;

import com.badlogic.gdx.graphics.Color;
import com.badlogic.gdx.graphics.OrthographicCamera;
import com.badlogic.gdx.graphics.glutils.ShapeRenderer;
import com.badlogic.gdx.graphics.glutils.ShapeRenderer.ShapeType;
import com.badlogic.gdx.graphics.GL10;
import com.badlogic.gdx.math.Rectangle;
import com.raymondlusida.birthdaygirl.model.Girl;
import com.raymondlusida.birthdaygirl.model.Room;

public class RoomRenderer {

	private Room room;
	private OrthographicCamera cam;

	/** debug rendering **/
	ShapeRenderer debugRenderer = new ShapeRenderer();

	
	public RoomRenderer(Room room) {
		this.room = room;
		this.cam = new OrthographicCamera(9, 16);
		this.cam.position.set(4.5f, 8, 0);
		this.cam.update();
	}
	
	public void render() {
		 debugRenderer.setProjectionMatrix(cam.combined);
         debugRenderer.begin(ShapeType.Rectangle);

         // render Bob
         Girl girl = room.getGirl();
         Rectangle rect = girl.getBounds();
         
         float x1 = girl.getPosition().x;
         float y1 = girl.getPosition().y;
         debugRenderer.setColor(new Color(0, 1, 0, 1));
         debugRenderer.rect(x1, y1, rect.width, rect.height);
         debugRenderer.end();
	}
}
